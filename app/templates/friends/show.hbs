<div class="container">
    <div class="row">      
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-5">
                        <img src="https://d13yacurqjgara.cloudfront.net/users/31752/screenshots/2027545/antione_1x.png" alt="" class="img-rounded img-responsive" />
                    </div>
                    <div class="col-sm-6 col-md-5">
                        <h4 style="text-transform: capitalize;">{{model.firstName}} {{model.lastName}}</h4>
                        <p><i class="glyphicon glyphicon-envelope"></i>{{model.email}}</p>
                        <!-- Split button -->
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary">
                                Social</button>
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span><span class="sr-only">Social</span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="https://twitter.com/{{model.twitter}}">Twitter</a></li>
                                <li><a href="https://plus.google.com/+Jquery2dotnet/posts">Google +</a></li>
                                <li><a href="https://www.facebook.com/jquery2dotnet">Facebook</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Github</a></li>
                            </ul>
                        </div><br><br>
                     {{link-to "Edit info" "friends.edit" model}}
                    </div>
                     <div class="col-sm-6 col-md-2"><div class="pull-right">
                     <button href="#" {{action "delete" model }} class="btn btn-danger">X</button>
                     </div></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="articles-container">
{{outlet}}
</div>