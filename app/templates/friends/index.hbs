<div class="container">
<div class="panel panel-default">

 <div class="panel-heading">Friends Index</div>
  <div class="panel-body">
    <button class="btn btn-success" type="button">Total friends: <span class="badge">{{model.length}}</span></button>
  </div>
      <table class="table">
        <thead>
          <tr>
            <th {{action "setSortBy" "firstName"}}> Name</th>
            <th {{action "setSortBy" "totalArticles"}}>Articles</th>
            <th></th>
          </tr>
        </thead>
          <tbody>
          {{#each friend in model}}
            <tr>
              <td>{{link-to friend.fullName "articles" friend}}</td>
              <td>{{friend.totalArticles}}</td>
              <td><a href="#" {{action "delete" friend}}><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button></a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
</div>